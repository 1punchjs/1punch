{
  "compilerOptions": {
    "declaration": true,
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": false,
    "preserveConstEnums": true,
    "baseUrl": ".",
    "paths": {
      "@1punch/core": ["packages/core/src"],
      "@1punch/types": ["packages/types/src"],
      "@1punch/utils": ["packages/utils/src"],
      "@1punch/cli": ["packages/cli/src"],
    }
  }
}
